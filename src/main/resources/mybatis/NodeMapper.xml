<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.auditflow.customize.mapper.NodeMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.auditflow.customize.entity.NodeEntity" id="nodeMap">
        <id property="id" jdbcType="INTEGER" column="id"/>
        <result property="nodeName" column="node_name"/>
        <result property="type" column="type"/>
        <result property="auditUserids" column="audit_userids"/>
        <result property="createrName" column="creater_name"/>
		<result property="createTime" column="create_time"/>
		<result property="isValid" column="is_valid"/>
		<result property="userIds" column="user_ids"/>
    </resultMap>

    <sql id="base_colum">
			id,
			`node_name`,
			`type`,
			user_ids as audit_userids,
			`creater_name`,
			`create_time`,
			`is_valid`,
			user_ids
	</sql>

    <insert id="save" parameterType="com.auditflow.customize.entity.NodeEntity" useGeneratedKeys="true" keyProperty="id">
        insert into audit_node
		(
			`node_name`,
			`type`,
			`audit_userids`,
			`creater_name`,
			`create_time`,
			`is_valid`,
			user_ids
		)
		values
		(
			#{nodeName},
			#{type},
			#{auditUserids},
			#{createrName},
			#{createTime},
			#{isValid},
			#{userIds}
		)
    </insert>

	<select id="selectAllNodes" resultMap="nodeMap">
        select <include refid="base_colum"/> from audit_node where is_valid=1
    </select>

	<select id="findTopById" resultMap="nodeMap">
		select <include refid="base_colum"/> from audit_node where id=#{id}
	</select>

	<select id="queryPage" resultMap="nodeMap">
		select <include refid="base_colum"/> from audit_node where 1=1
		<if test="name!=null and name!=''">
			and node_name like CONCAT('%',#{name},'%')
		</if>
		limit #{pagenum},#{pagesize}
	</select>

	<select id="countByQuery" resultType="java.lang.Integer">
		select count(*) from audit_node where 1=1
		<if test="name!=null and name!=''">
			and node_name like CONCAT('%',#{name},'%')
		</if>
	</select>

	<update id="updateNode">
		update audit_node
		set node_name = #{nodeName},`type`=#{type},audit_userids=#{auditUserids},user_ids = #{auditUserids}
		where id=#{id}
	</update>

	<update id="updateValid">
		update audit_node
		set is_valid=#{isValid}
		where id=#{id}
	</update>
</mapper>
