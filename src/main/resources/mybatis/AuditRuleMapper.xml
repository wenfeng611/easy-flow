<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.auditflow.customize.mapper.AuditRuleMapper">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.auditflow.customize.entity.AuditRuleEntity" id="auditRuleMap">
        <id property="id" jdbcType="INTEGER" column="id"/>
        <result property="enableCondition" column="enable_condition"/>
        <result property="statisfyType" column="statisfy_type"/>
        <result property="successToNodeId" column="success_to_node_id"/>
        <result property="failToNode" column="fail_to_node"/>
        <result property="autoJudgeRule" column="auto_judge_rule"/>
        <result property="flowId" column="flow_id"/>
        <result property="g6nodeId" column="g6node_id"/>
        <result property="nodeType" column="node_type"/>
        <result property="createTime" column="create_time"/>
		<result property="createrName" column="creater_name"/>
		<result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="base_colum">
			id,
			`enable_condition`,
			`statisfy_type`,
			`success_to_node_id`,
			`fail_to_node`,
			`auto_judge_rule`,
			`flow_id`,
			`g6node_id`,
			`node_type`,
			`create_time`,
			`creater_name`,
			`update_time`
	</sql>

    <insert id="save" parameterType="com.auditflow.customize.entity.AuditRuleEntity" useGeneratedKeys="true" keyProperty="id">
        insert into audit_rule
		(
			`enable_condition`,
			`statisfy_type`,
			`success_to_node_id`,
			`fail_to_node`,
			`auto_judge_rule`,
			`flow_id`,
			`g6node_id`,
			`node_type`,
			`create_time`,
			`creater_name`,
			`update_time`
		)
		values
		(
			#{enableCondition},
			#{statisfyType},
			#{successToNodeId},
			#{failToNode},
			#{autoJudgeRule},
			#{flowId},
			#{g6nodeId},
			#{nodeType},
			#{createTime},
			#{createrName},
			#{updateTime}
		)
    </insert>
    <update id="updateRule">
		update audit_rule
		set enable_condition=#{enableCondition},
			statisfy_type=#{statisfyType},
			success_to_node_id=#{successToNodeId},
			fail_to_node=#{failToNode},
			auto_judge_rule=#{autoJudgeRule},
		 	update_time=now()
		where id=#{id}
	</update>

    <select id="findByFlowIdAndNodeId" resultMap="auditRuleMap">
		select <include refid="base_colum"/> from audit_rule where flow_id=#{flowId} and  g6node_id=#{nodeId} limit 1
	</select>

	<select id="findByFlowIdAndNodeType" resultMap="auditRuleMap">
		select <include refid="base_colum"/> from audit_rule where flow_id=#{flowId} and  node_type=#{nodeType} limit 1
	</select>

	<select id="findByFlowIdAndNodeTypeInsIn" resultMap="auditRuleMap">
		select <include refid="base_colum"/> from audit_rule where node_type=#{nodeType}
		and `flow_id`  in
		<foreach collection="list" open="(" close=")" item="item" separator=",">
			#{item}
		</foreach>
	</select>


</mapper>
